    "servers": [
        {
            "url": "http://localhost:{port}/api/whatsapp",
            "description": "Whatsapp API for Local development",
            "variables": {
                "port": {
                    "default": "8080"
                }
            }
        },
        {
            "url": "https://{domain}/api/whatsapp",
            "description": "Whatsapp API for Beta & Production development",
            "variables": {
                "domain": {
                    "enum": ["beta.com", "production.com"],
                    "default": "beta"
                }
            }
        }
    ],
    "externalDocs": {
        "description": "Find out more about Swagger",
        "url": "http://swagger.io"
    },
    "tags": [
        {
            "name": "Whatsapp Message",
            "description": "Whatsapp Message API"
        }
    ],
    "paths": {
        "/message": {
            "post": {
                "tags": ["Whatsapp Message"],
                "operationId": "postMessage",
                "summary": "Send Message to Whatsapp",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "requestBody": {
                    "$ref": "#/components/request/Message"
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Success"
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalServerError"
                    }
                }
            }
        }
    },
    "components": {
        "request": {
            "Message": {
                "description": "Example Request Send Message",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Message"
                        },
                        "examples": {
                            "Text": {
                                "$ref": "#/components/examples/Text"
                            },
                            "Text-Image": {
                                "$ref": "#/components/examples/TextImage"
                            }
                        }
                    }
                }
            }
        },
        "responses": {
            "Success": {
                "description": "Response Success",
                "content": {
                    "appication/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Success"
                        }
                    }
                }
            },
            "BadRequest": {
                "description": "Response Bad Request",
                "content": {
                    "appication/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            },
            "NotFound": {
                "description": "Response Not Found",
                "content": {
                    "appication/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            },
            "InternalServerError": {
                "description": "Response Internal Server Error",
                "content": {
                    "appication/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        },
        "schemas": {
            "Message": {
                "required": ["to", "type", "body"],
                "properties": {
                    "to": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "body": {
                        "type": "object",
                        "required": ["message"],
                        "properties": {
                            "message": {
                                "type": "string"
                            },
                            "link": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "Success": {
                "properties": {
                    "apiVersion": {
                        "type": "string"
                    },
                    "data": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "integer"
                            },
                            "status": {
                                "type": "string"
                            },
                            "data": {
                                "type": "object"
                            }
                        }
                    }
                }
            },
            "Error": {
                "properties": {
                    "apiVersion": {
                        "type": "string"
                    },
                    "error": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "integer"
                            },
                            "status": {
                                "type": "string"
                            },
                            "errors": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "params": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            },
                            "detail": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "examples": {
            "Text": {
                "value": {
                    "to": "6281318481635",
                    "type": "text/individual",
                    "body": {
                        "message": "hallo"
                    }
